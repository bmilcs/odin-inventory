<%- include('partials/header') %>

<section class="my-16" aria-label="hero">
  <h2
    class="font-extrabold text-3xl mt-3 leading-negative-2 tracking-tight md:text-5xl md:mt-5 md:tracking-tighter md:leading-negative"
  >
    All Products
  </h2>
  <p class="mb-8 mt-2">Here is a full list of your inventory:</p>

  <div class="rounded-md product-grid gap-6 tracking-tight">
    <!-- product rows -->
    <% allProducts.map(product => { %>
    <article
      class="bg-neutral-200 shadow-md p-4 rounded-md hover:scale-105 transition-transform ease-in-out duration-200"
    >
      <p class="px-1 text-neutral-500 text-sm"><%= product.category.name %></p>
      <p class="px-1 font-bold"><%= product.name %></p>
      <p class="px-1">$<%= product.price %></p>
      <p class="px-1 mb-4 text-sm"><%= product.quantity %> In Stock</p>
      <div class="flex justify-end gap-1">
        <a class="" href="/inventory/<%= product._id %>"
          ><button
            class="bg-neutral-700 rounded-md px-4 py-1 text-sm text-neutral-200 hover:bg-lime-600 transition-all duration-300 ease-in-out hover:-translate-y-1"
          >
            View
          </button></a
        >
        <a class="" href="/inventory/<%= product._id %>/update"
          ><button
            class="bg-neutral-700 rounded-md px-4 py-1 text-sm text-neutral-200 hover:bg-lime-600 transition-all duration-300 ease-in-out hover:-translate-y-1"
          >
            Edit
          </button></a
        >
        <a class="" href="/inventory/<%= product._id %>/delete"
          ><button
            class="bg-neutral-700 rounded-md px-4 py-1 text-sm text-neutral-200 hover:bg-lime-600 transition-all duration-300 ease-in-out hover:-translate-y-1"
          >
            Delete
          </button></a
        >
      </div>
    </article>
    <% }); %>
  </div>
</section>

<%- include('partials/footer') %>
