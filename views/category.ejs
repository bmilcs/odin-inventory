<%- include('partials/header') %>

<section class="my-16">
  <!-- category name & description -->
  <h2
    class="leading-negative-2 md:leading-negative text-3xl font-extrabold tracking-tight md:text-5xl md:tracking-tighter"
  >
    <%= category.name %>
  </h2>

  <p class="mb-8 mt-4 max-w-screen-md"><%= category.description %></p>

  <!-- action buttons: edit & delete -->
  <div class="flex justify-start gap-1">
    <a class="" href="/categories/<%= category._id %>/update"
      ><button
        class="rounded-md bg-neutral-700 px-4 py-2 text-sm text-neutral-200 transition-all duration-300 ease-in-out hover:-translate-y-1 hover:bg-blue-600"
      >
        Edit Category
      </button></a
    >
    <a class="" href="/categories/<%= category._id %>/delete"
      ><button
        class="rounded-md bg-neutral-700 px-4 py-2 text-sm text-neutral-200 transition-all duration-300 ease-in-out hover:-translate-y-1 hover:bg-blue-600"
      >
        Delete Category
      </button></a
    >
  </div>

  <!-- display existing products in category  -->
  <h2
    class="leading-negative-2 md:leading-negative mt-16 text-2xl font-extrabold tracking-tight md:text-3xl md:tracking-tighter"
  >
    Products in <%= category.name %>
  </h2>

  <% if (products.length > 0) { %>
  <!-- render product grid -->
  <%- include('partials/productGrid', { products }) %> <% } else { %>
  <!-- no products exist -->
  <p class="mb-8 mt-4">There are no products in this category.</p>

  <a class="" href="/inventory/create"
    ><button
      class="rounded-md bg-neutral-700 px-4 py-2 text-sm text-neutral-200 transition-all duration-300 ease-in-out hover:-translate-y-1 hover:bg-blue-600"
    >
      Create Product
    </button></a
  >
  <% } %>
</section>

<%- include('partials/footer') %>
